<idea-plugin>
    <id>pl.mpsk2.aspplugin</id>
    <name>Answer Set Programming</name>
    <vendor email="ms335789@students.mimuw.edu.pl" url="http://www.mimuw.edu.pl">MIM UW</vendor>

    <description><![CDATA[
    <h1>Answer Set Programming language support <h1>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="pl.mpsk2.aspplugin.ASPFileTypeFactory"/>
        <lang.commenter language="Answer Set Programming" implementationClass="pl.mpsk2.aspplugin.ASPCommenter"/>
        <lang.parserDefinition language="Answer Set Programming" implementationClass="pl.mpsk2.aspplugin.parser.ASPParserDefinition"/>
        <lang.psiStructureViewFactory language="Answer Set Programming" implementationClass="pl.mpsk2.aspplugin.tree.ASPStructureViewFactory"/>
        <lang.syntaxHighlighterFactory language="Answer Set Programming" implementationClass="pl.mpsk2.aspplugin.highlighting.ASPSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="pl.mpsk2.aspplugin.highlighting.ASPColorSettingsPage"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
